<Window x:Class="BioSAK.Pages.TcgaDataDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BioXAK â€” TCGA Data Initialization"
        Width="520" Height="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Icon="/Fig/ICON.png">

    <Window.Resources>
        <Style x:Key="HeadStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style x:Key="DescStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid Margin="28,24,28,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- æ¨™é¡Œ + èªªæ˜Ž -->
            <RowDefinition Height="*"/>
            <!-- ç‹€æ…‹å€ -->
            <RowDefinition Height="Auto"/>
            <!-- é€²åº¦æ¢ -->
            <RowDefinition Height="Auto"/>
            <!-- æŒ‰éˆ• -->
        </Grid.RowDefinitions>

        <!-- æ¨™é¡Œ -->
        <StackPanel Grid.Row="0">
            <TextBlock Style="{StaticResource HeadStyle}" Text="ðŸ§¬  TCGA Database Initialization"/>
            <TextBlock Style="{StaticResource DescStyle}"
                       Text="No local TCGA data detected. Click &quot;Start Download&quot; to automatically download all cancer datasets (~3â€“5 GB) from Zenodo. All analysis features will be available once the download is complete."/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="1" Background="#F0F4F8" CornerRadius="4"
                Margin="0,16,0,12" Padding="12,10">
            <StackPanel>
                <TextBlock x:Name="StatusText"
                           Text="Ready to download..."
                           FontSize="12" Foreground="#333"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="FileCountText"
                           Text=""
                           FontSize="11" Foreground="#888"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <ProgressBar x:Name="MainProgress"
                         Height="10" Minimum="0" Maximum="100" Value="0"
                         Foreground="#1976D2" Background="#DDEEFF"
                         BorderThickness="0"/>
            <TextBlock x:Name="PercentText"
                       Text="0%"
                       FontSize="11" Foreground="#666"
                       HorizontalAlignment="Right"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="SkipButton"
                    Content="Skip for Now"
                    Width="100" Height="32" Margin="0,0,10,0"
                    Background="#F5F5F5" BorderBrush="#CCC"
                    Click="SkipButton_Click"/>
            <Button x:Name="ActionButton"
                    Content="â–¶  Start Download"
                    Width="130" Height="32"
                    Background="#1976D2" Foreground="White"
                    BorderThickness="0" FontWeight="SemiBold"
                    Click="ActionButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
