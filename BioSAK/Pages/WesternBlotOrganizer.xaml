<Page x:Class="BioSAK.Pages.WesternBlotOrganizer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Western Blot Organizer"
      d:DesignHeight="850" d:DesignWidth="1560"
      Background="#F0F0F0"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin"     Value="0,0,0,6"/>
        </Style>
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background"      Value="White"/>
            <Setter Property="BorderBrush"     Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="4"/>
            <Setter Property="Padding"         Value="10"/>
            <Setter Property="Margin"          Value="0,0,0,8"/>
        </Style>
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Padding"    Value="8,4"/>
            <Setter Property="Margin"     Value="2"/>
            <Setter Property="FontSize"   Value="11"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Cursor"     Value="Hand"/>
        </Style>
        <Style x:Key="SmallLabel" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="11"/>
            <Setter Property="FontFamily"        Value="Arial"/>
            <Setter Property="Foreground"        Value="#555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin"            Value="0,0,6,0"/>
        </Style>
        <Style x:Key="EdLabel" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="11"/>
            <Setter Property="FontFamily"        Value="Arial"/>
            <Setter Property="Foreground"        Value="#555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width"             Value="48"/>
        </Style>
        <Style x:Key="EdValue" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="10"/>
            <Setter Property="FontFamily"        Value="Arial"/>
            <Setter Property="Foreground"        Value="#555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width"             Value="38"/>
            <Setter Property="TextAlignment"     Value="Right"/>
        </Style>
        <Style x:Key="ModeToggle" TargetType="ToggleButton">
            <Setter Property="Padding"    Value="8,4"/>
            <Setter Property="FontSize"   Value="11"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Setter Property="Margin"     Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background"  Value="#FFF3CD"/>
                    <Setter Property="BorderBrush" Value="#F0AD4E"/>
                    <Setter Property="FontWeight"  Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- 5-column: Organize | splitter | Preview | splitter | Image Editor -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="260"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════
             COL 0  —  Organize Panel
             ═══════════════════════════════════════════ -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#2C3E50" Padding="12,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x1F9EB;" FontSize="18" VerticalAlignment="Center"/>
                        <StackPanel Margin="8,0,0,0">
                            <TextBlock Text="Western Blot Organizer" Foreground="White"
                                       FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="Auto-arrange and annotate blot images"
                                       Foreground="#BDC3C7" FontFamily="Arial" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>

                        <!-- Blot Images -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="Blot Images" Style="{StaticResource GroupHeaderStyle}"/>
                                <Border BorderBrush="#CCC" BorderThickness="1" Height="150" Margin="0,0,0,6">
                                    <ListBox x:Name="BlotListBox"
                                             ItemsSource="{Binding Blots}"
                                             SelectionChanged="BlotListBox_SelectionChanged"
                                             AllowDrop="True" Drop="BlotListBox_Drop"
                                             Background="#FAFAFA" BorderThickness="0"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="2,3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="34"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Width="30" Height="22" Background="#EEE" BorderBrush="#CCC" BorderThickness="1">
                                                        <Image Source="{Binding Image}" Stretch="Uniform"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="6,0"
                                                               FontSize="12" FontFamily="Arial" Text="{Binding DisplayLabel}" Foreground="#333"/>
                                                    <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                                               FontSize="10" Foreground="#AAA" Text="{Binding IndexLabel}" Margin="4,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                                <UniformGrid Rows="1" Columns="4" Margin="0,0,0,8">
                                    <Button Content="+ Add"           Style="{StaticResource ActionBtn}" Click="BtnAddBlot_Click"    Background="#DFF0D8"/>
                                    <Button Content="&#8593; Up"      Style="{StaticResource ActionBtn}" Click="BtnMoveUp_Click"/>
                                    <Button Content="&#8595; Down"    Style="{StaticResource ActionBtn}" Click="BtnMoveDown_Click"/>
                                    <Button Content="&#10005; Remove" Style="{StaticResource ActionBtn}" Click="BtnRemoveBlot_Click" Background="#F2DEDE"/>
                                </UniformGrid>
                                <Border Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1" Padding="8,6" CornerRadius="3">
                                    <StackPanel>
                                        <!-- Antibody label (α prefix only, no dash) -->
                                        <TextBlock Text="Antibody name for selected blot:"
                                                   FontSize="10" FontFamily="Arial" Foreground="#666" Margin="0,0,0,4"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox x:Name="CboBlotPrefix"
                                                      FontSize="13" FontFamily="Arial" FontWeight="Bold"
                                                      Foreground="#2C3E50" VerticalAlignment="Center"
                                                      Width="72" Height="26" Margin="0,0,4,0"
                                                      SelectionChanged="CboBlotPrefix_SelectionChanged">
                                                <ComboBoxItem Content="α"     IsSelected="True"/>
                                                <ComboBoxItem Content="Anti-"/>
                                                <ComboBoxItem Content="p-"/>
                                                <ComboBoxItem Content="t-"/>
                                                <ComboBoxItem Content="(none)"/>
                                            </ComboBox>
                                            <TextBox x:Name="TxtBlotName" Grid.Column="1"
                                                     FontSize="13" FontFamily="Arial" Padding="4,3"
                                                     TextChanged="TxtBlotName_TextChanged"/>
                                        </Grid>

                                        <!-- Gene ID search (independent from antibody name) -->
                                        <Border Margin="0,8,0,0" Background="#EBF5FB" BorderBrush="#AED6F1"
                                                BorderThickness="1" CornerRadius="3" Padding="6,6">
                                            <StackPanel>
                                                <TextBlock Text="Gene ID search:" FontSize="10" FontFamily="Arial"
                                                           Foreground="#1A5276" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="TxtGeneSearch"
                                                             FontSize="12" FontFamily="Arial" Padding="4,3"
                                                             TextChanged="TxtGeneSearch_TextChanged"/>
                                                    <ComboBox x:Name="CboGeneSpecies" Grid.Column="1"
                                                              FontSize="10" FontFamily="Arial"
                                                              Width="65" Height="26"
                                                              SelectionChanged="CboGeneSpecies_Changed"
                                                              SelectedIndex="0" Margin="4,0,0,0">
                                                        <ComboBoxItem Content="Human"/>
                                                        <ComboBoxItem Content="Mouse"/>
                                                    </ComboBox>
                                                    <Button Grid.Column="2" Content="Use"
                                                            x:Name="BtnUseGeneName"
                                                            Padding="6,3" FontSize="10" FontFamily="Arial"
                                                            Background="#D6EAF8" BorderBrush="#85C1E9"
                                                            Margin="4,0,0,0" IsEnabled="False"
                                                            Click="BtnUseGeneName_Click"
                                                            ToolTip="Set official symbol as antibody name"/>
                                                </Grid>
                                                <!-- Official name result -->
                                                <TextBlock x:Name="TxtGeneOfficialName"
                                                           FontSize="10" FontFamily="Arial"
                                                           Foreground="#27AE60" Margin="0,4,0,0"
                                                           TextWrapping="Wrap"
                                                           ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Layout Settings -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="Layout Settings" Style="{StaticResource GroupHeaderStyle}"/>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Blot display width"  Style="{StaticResource SmallLabel}"/>
                                    <TextBox x:Name="TxtBlotWidth"  Grid.Column="1" Text="480" FontSize="12" Padding="4,3" TextChanged="LayoutSetting_Changed"/>
                                    <TextBlock Grid.Column="2" Text="px" Style="{StaticResource SmallLabel}" Margin="3,0,0,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Label column width" Style="{StaticResource SmallLabel}"/>
                                    <TextBox x:Name="TxtLabelWidth" Grid.Column="1" Text="130" FontSize="12" Padding="4,3" TextChanged="LayoutSetting_Changed"/>
                                    <TextBlock Grid.Column="2" Text="px" Style="{StaticResource SmallLabel}" Margin="3,0,0,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Row spacing" Style="{StaticResource SmallLabel}"/>
                                    <TextBox x:Name="TxtRowSpacing" Grid.Column="1" Text="6" FontSize="12" Padding="4,3" TextChanged="LayoutSetting_Changed"/>
                                    <TextBlock Grid.Column="2" Text="px" Style="{StaticResource SmallLabel}" Margin="3,0,0,0"/>
                                </Grid>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Font size" Style="{StaticResource SmallLabel}"/>
                                    <TextBox x:Name="TxtFontSize" Grid.Column="1" Text="13" FontSize="12" Padding="4,3" TextChanged="LayoutSetting_Changed"/>
                                    <TextBlock Grid.Column="2" Text="pt" Style="{StaticResource SmallLabel}" Margin="3,0,0,0"/>
                                </Grid>
                                <TextBlock Text="Border = 0.5 mm  |  Height scales proportionally"
                                           FontSize="10" FontFamily="Arial" Foreground="#888"/>
                            </StackPanel>
                        </Border>

                        <!-- Top Group Labels -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Top Group Labels" Style="{StaticResource GroupHeaderStyle}" VerticalAlignment="Center" Margin="0"/>
                                    <Button Grid.Column="1" Content="+ Add Label" Padding="8,3" FontSize="11" FontFamily="Arial"
                                            Background="#D6EAF8" BorderBrush="#85C1E9" Click="BtnAddTopLabel_Click"/>
                                </Grid>
                                <ItemsControl ItemsSource="{Binding TopLabels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,2" Background="White" BorderBrush="#D6EAF8" BorderThickness="0,0,0,1" Padding="3,3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Padding="3,2" Margin="0,0,4,0"/>
                                                    <TextBlock Grid.Column="1" Text="Lanes:" FontSize="10" Foreground="#666" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                                    <TextBox Grid.Column="2" Text="{Binding StartLane, UpdateSourceTrigger=PropertyChanged}" Width="26" FontSize="11" TextAlignment="Center" Padding="2,2"/>
                                                    <TextBlock Grid.Column="3" Text="-" FontSize="10" Foreground="#666" VerticalAlignment="Center" Margin="2,0"/>
                                                    <TextBox Grid.Column="4" Text="{Binding EndLane, UpdateSourceTrigger=PropertyChanged}" Width="26" FontSize="11" TextAlignment="Center" Padding="2,2"/>
                                                    <Button Grid.Column="5" Content="&#10005;" Tag="{Binding}" Click="DeleteTopLabel_Click" FontSize="9" Padding="2,1" Background="#FADBD8" Margin="4,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Condition Labels -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="Condition Labels" Style="{StaticResource GroupHeaderStyle}"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Number of lanes:" Style="{StaticResource SmallLabel}"/>
                                    <TextBox x:Name="TxtColumnCount" Grid.Column="1" Text="4" FontSize="12" Padding="4,3" TextChanged="TxtColumnCount_TextChanged"/>
                                </Grid>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Condition rows:" FontSize="11" FontFamily="Arial" Foreground="#555" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="+ Add Row" Padding="8,3" FontSize="11" FontFamily="Arial"
                                            Background="#D6EAF8" BorderBrush="#85C1E9" Click="BtnAddConditionRow_Click"/>
                                </Grid>
                                <Border BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" MinHeight="36" Padding="3">
                                    <ItemsControl ItemsSource="{Binding ConditionRows}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,2" Background="White" BorderBrush="#D6EAF8" BorderThickness="0,0,0,1" Padding="3,3">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="64"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="38"/>
                                                            <ColumnDefinition Width="20"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Text="{Binding RowLabel, UpdateSourceTrigger=PropertyChanged}" FontSize="10" FontFamily="Arial" Padding="3,2"/>
                                                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Cells}" Margin="2,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <ComboBox IsEditable="True"
                                                                              Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                              ItemsSource="{Binding Options}"
                                                                              Width="42" Height="22" Margin="1,1"
                                                                              FontSize="11" FontFamily="Arial"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                        <Button Grid.Column="2" Content="{Binding PatternLabel}" Tag="{Binding}"
                                                                Click="PatternToggle_Click" FontSize="9" FontFamily="Arial"
                                                                Padding="2,2" Margin="1,0" Background="#EEF4FF" BorderBrush="#B8D0F0"
                                                                ToolTip="Cycle fill pattern"/>
                                                        <Button Grid.Column="3" Content="&#10005;" Tag="{Binding}" Click="DeleteConditionRow_Click"
                                                                FontSize="9" Padding="2,1" Background="#FADBD8" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                                <TextBlock Margin="0,4,0,0" FontSize="10" FontFamily="Arial" Foreground="#888" TextWrapping="Wrap">
                                    Options: -, +, numbers, or custom text. Pattern button cycles -+, --++, ---+++ …
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Side Labels -->
                        <Border Style="{StaticResource SectionBorder}">
                            <StackPanel>
                                <TextBlock Text="Side Labels" Style="{StaticResource GroupHeaderStyle}"/>
                                <Border BorderBrush="#CCC" BorderThickness="1" Height="80" Margin="0,0,0,6">
                                    <ListBox x:Name="MarkerListBox" ItemsSource="{Binding Markers}"
                                             Background="#FAFAFA" BorderThickness="0"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="2,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="22"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="&#x25B6;" FontSize="11" Foreground="#E67E22" VerticalAlignment="Center" Margin="2,0,5,0"/>
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}"
                                                             FontSize="11" FontFamily="Arial" Padding="3,2"
                                                             BorderThickness="0,0,0,1"
                                                             TextChanged="MarkerLabel_TextChanged"/>
                                                    <Button Grid.Column="2" Content="&#10005;" Tag="{Binding}" Click="DeleteMarker_Click"
                                                            FontSize="9" Padding="2,1" Background="#FADBD8" VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                                <TextBlock FontSize="10" FontFamily="Arial" Foreground="#888" TextWrapping="Wrap">
                                    Enable '&#x25B6; Add Label' in toolbar, then click preview to place.
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- Footer: Export -->
                <Border Grid.Row="2" Padding="10,8" BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0" Background="#FAFAFA">
                    <StackPanel>
                        <Button Content="Refresh Preview" Padding="8,6" FontSize="12" FontFamily="Arial"
                                Margin="0,0,0,6" Background="#EAF2FF" BorderBrush="#85C1E9"
                                Click="BtnUpdatePreview_Click"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Export PNG"  Padding="8,6" FontSize="12" FontFamily="Arial"
                                    Margin="0,0,3,0" Background="#D5F5E3" BorderBrush="#82E0AA" Click="BtnExportPng_Click"/>
                            <Button Grid.Column="1" Content="Export TIFF" Padding="8,6" FontSize="12" FontFamily="Arial"
                                    Margin="3,0,0,0" Background="#D5F5E3" BorderBrush="#82E0AA" Click="BtnExportTiff_Click"/>
                        </Grid>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Export DPI:" FontSize="11" FontFamily="Arial"
                                       Foreground="#555" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CboExportDpi" Grid.Column="1" FontSize="11" SelectedIndex="1">
                                <ComboBoxItem Content="150 DPI  (web / slides)"/>
                                <ComboBoxItem Content="300 DPI  (journal standard)"/>
                                <ComboBoxItem Content="600 DPI  (high-res print)"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch"
                      Background="#CFD8DC" Cursor="SizeWE"/>

        <!-- ═══════════════════════════════════════════
             COL 2  —  Tabbed: Figure Preview / Image Editor
             ═══════════════════════════════════════════ -->
        <TabControl Grid.Column="2"
                    Background="White"
                    BorderBrush="#CFD8DC" BorderThickness="0,1,0,0"
                    Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontFamily"  Value="Arial"/>
                    <Setter Property="FontSize"    Value="12"/>
                    <Setter Property="Padding"     Value="16,8"/>
                    <Setter Property="Background"  Value="#ECEFF1"/>
                    <Setter Property="Foreground"  Value="#555"/>
                    <Setter Property="BorderBrush" Value="#CFD8DC"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background"  Value="White"/>
                            <Setter Property="Foreground"  Value="#1A5276"/>
                            <Setter Property="FontWeight"  Value="SemiBold"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!-- ── Tab 1: Figure Preview ─────────────────────────── -->
            <TabItem Header="&#x1F4CA;  Figure Preview">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Border Grid.Row="0" Background="#ECEFF1" BorderBrush="#CFD8DC"
                    BorderThickness="0,0,0,1" Padding="10,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Preview" FontSize="13" FontFamily="Arial" FontWeight="SemiBold" Foreground="#37474F"/>
                                <TextBlock x:Name="TxtPreviewInfo" FontSize="11" FontFamily="Arial"
                                   Foreground="#78909C" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <ToggleButton x:Name="BtnLaneSelect" Content="&#x25CF; Set Lanes"
                                      Style="{StaticResource ModeToggle}"
                                      Checked="BtnLaneSelect_Checked" Unchecked="BtnLaneSelect_Unchecked"
                                      ToolTip="Click to place lane center. Right-click to remove."/>
                                <Button Content="Clear" Style="{StaticResource ActionBtn}" Click="BtnClearLanes_Click"/>
                                <Separator Margin="3,0"/>
                                <ToggleButton x:Name="BtnBoundaryMode" Content="&#x2194; Set Bounds"
                                      Style="{StaticResource ModeToggle}"
                                      Checked="BtnBoundaryMode_Checked" Unchecked="BtnBoundaryMode_Unchecked"
                                      ToolTip="Click: set Left then Right boundary alternately. Right-click: remove nearest."/>
                                <Button Content="Clear" Style="{StaticResource ActionBtn}" Click="BtnClearBounds_Click"/>
                                <TextBlock x:Name="TxtBoundStatus" FontSize="10" FontFamily="Arial"
                                   Foreground="#27AE60" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="4,0,2,0" Visibility="Collapsed"/>
                                <Separator Margin="3,0"/>
                                <ToggleButton x:Name="BtnAddMarkerMode" Content="&#x25B6; Add Label"
                                      Style="{StaticResource ModeToggle}"
                                      Checked="BtnAddMarkerMode_Checked" Unchecked="BtnAddMarkerMode_Unchecked"
                                      ToolTip="Click on preview to place a side label line"/>
                                <Separator Margin="4,0"/>
                                <TextBlock Text="Zoom:" FontSize="11" FontFamily="Arial" Foreground="#546E7A"
                                   VerticalAlignment="Center" Margin="4,0,4,0"/>
                                <Slider x:Name="PreviewZoom" Width="110" Minimum="0.2" Maximum="2.5"
                                Value="1.0" TickFrequency="0.05" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center" ValueChanged="PreviewZoom_ValueChanged"/>
                                <TextBlock x:Name="TxtZoomLabel" Text="100%" Width="38" FontSize="11"
                                   FontFamily="Arial" Foreground="#546E7A" VerticalAlignment="Center" Margin="4,0"/>
                                <Button Content="Fit" Style="{StaticResource ActionBtn}" Click="BtnFitZoom_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" x:Name="PreviewScroll"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          Background="#78909C" Padding="24"
                          PreviewMouseWheel="PreviewScroll_MouseWheel">
                        <Border x:Name="PreviewShadowBox" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.35" Color="#000"/>
                            </Border.Effect>
                            <Grid x:Name="PreviewGrid" Background="White"
                          MouseMove="Overlay_MouseMove"
                          MouseLeftButtonDown="Overlay_MouseDown"
                          MouseLeftButtonUp="Overlay_LeftClick"
                          MouseRightButtonDown="Overlay_RightMouseDown"
                          MouseRightButtonUp="Overlay_RightClick">
                                <Grid.LayoutTransform>
                                    <ScaleTransform x:Name="PreviewScale" ScaleX="1" ScaleY="1"/>
                                </Grid.LayoutTransform>
                                <Image x:Name="PreviewImage" Stretch="None" SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                <Canvas x:Name="OverlayCanvas" Background="Transparent" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- ── Tab 2: Image Editor ───────────────────────────── -->
            <TabItem Header="&#x1F5BC;  Image Editor">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- header -->
                        <RowDefinition Height="Auto"/>
                        <!-- load button -->
                        <RowDefinition Height="*"/>
                        <!-- preview + crop canvas -->
                        <RowDefinition Height="Auto"/>
                        <!-- rotation + levels -->
                        <RowDefinition Height="Auto"/>
                        <!-- footer -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#1A5276" Padding="12,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F5BC;" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                            <StackPanel Margin="8,0,0,0">
                                <TextBlock Text="Image Editor" Foreground="White"
                                       FontFamily="Arial" FontSize="13" FontWeight="Bold"/>
                                <TextBlock Text="Adjust then add to Blot Images"
                                       Foreground="#AED6F1" FontFamily="Arial" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Load button row -->
                    <Border Grid.Row="1" Padding="10,8,10,6" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <Button Content="&#x1F4C2;  Load Image File…"
                                Padding="8,7" FontSize="12" FontFamily="Arial"
                                Background="#D6EAF8" BorderBrush="#85C1E9"
                                Click="BtnEditorLoad_Click"/>
                            <TextBlock x:Name="TxtEditorFile"
                                   Text="No file loaded" FontSize="10" FontFamily="Arial"
                                   Foreground="#888" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Preview area with crop canvas overlay -->
                    <Grid Grid.Row="2" Margin="10,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                            Background="#2C3E50" BorderBrush="#555" BorderThickness="1">
                            <Grid>
                                <Image x:Name="EditorPreviewImage"
                                   Stretch="Uniform" SnapsToDevicePixels="True"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   SizeChanged="EditorImage_SizeChanged"/>
                                <!-- Crop canvas: handles drawn here -->
                                <Canvas x:Name="EditorCropCanvas"
                                    Background="Transparent"
                                    Cursor="Cross"
                                    SizeChanged="EditorCropCanvas_SizeChanged"
                                    MouseLeftButtonDown="CropCanvas_MouseDown"
                                    MouseMove="CropCanvas_MouseMove"
                                    MouseLeftButtonUp="CropCanvas_MouseUp"/>
                            </Grid>
                        </Border>

                        <!-- Dims + crop action bar -->
                        <Grid Grid.Row="1" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtEditorDims"
                                   Text="" FontSize="10" FontFamily="Arial"
                                   Foreground="#888" VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                            <Button Grid.Column="1"
                                x:Name="BtnApplyCrop"
                                Content="&#x2702; Crop"
                                Padding="10,6" FontSize="12" FontFamily="Arial" FontWeight="SemiBold"
                                Background="#1A5276" Foreground="White" BorderBrush="#154360"
                                Cursor="Hand" Margin="4,0,0,0"
                                IsEnabled="False"
                                Click="BtnApplyCrop_Click"
                                ToolTip="Bake crop: selected region fills the preview"/>
                            <Button Grid.Column="2"
                                Content="&#x21BA; Reset"
                                Padding="8,6" FontSize="11" FontFamily="Arial"
                                Background="#F0F3F4" BorderBrush="#AAA"
                                Cursor="Hand" Margin="4,0,0,0"
                                Click="BtnResetCropOnly_Click"
                                ToolTip="Reset crop selection to full image"/>
                        </Grid>
                    </Grid>

                    <!-- Rotation + Levels controls -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" MaxHeight="260">
                        <StackPanel Margin="10,0,10,0">

                            <!-- Rotation / Flip -->
                            <Border Style="{StaticResource SectionBorder}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Rotation &amp; Flip" Style="{StaticResource GroupHeaderStyle}" Margin="0" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="Reset" Padding="5,2" FontSize="10" FontFamily="Arial"
                                            Background="#FDEDEC" BorderBrush="#E59866"
                                            Click="BtnEditorResetRotation_Click"/>
                                    </Grid>
                                    <!-- 90° + Flip buttons -->
                                    <UniformGrid Rows="1" Columns="4" Margin="0,0,0,8">
                                        <Button Content="&#x21BA; 90°" Padding="4,5" FontSize="11" FontFamily="Arial"
                                            ToolTip="Rotate 90° counter-clockwise"
                                            Click="BtnRotateCCW_Click"/>
                                        <Button Content="&#x21BB; 90°" Padding="4,5" FontSize="11" FontFamily="Arial"
                                            ToolTip="Rotate 90° clockwise"
                                            Click="BtnRotateCW_Click"/>
                                        <Button Content="&#x2194; Flip H" Padding="4,5" FontSize="11" FontFamily="Arial"
                                            ToolTip="Flip horizontal (left ↔ right)"
                                            Click="BtnFlipH_Click"/>
                                        <Button Content="&#x2195; Flip V" Padding="4,5" FontSize="11" FontFamily="Arial"
                                            ToolTip="Flip vertical (top ↔ bottom)"
                                            Click="BtnFlipV_Click"/>
                                    </UniformGrid>
                                    <TextBlock FontSize="9" FontFamily="Arial" Foreground="#888" Margin="0,0,0,6" TextWrapping="Wrap">
                                    Fine angle: rotate first — crop handles align to the rotated image.
                                    </TextBlock>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="38"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Angle" Style="{StaticResource EdLabel}"/>
                                        <Slider x:Name="EdSliderRotate" Grid.Column="1"
                                            Minimum="-45" Maximum="45" Value="0"
                                            IsSnapToTickEnabled="False"
                                            ValueChanged="EdSliderRotate_Changed"/>
                                        <TextBlock Grid.Column="2" Style="{StaticResource EdValue}"
                                               Text="{Binding Value, ElementName=EdSliderRotate, StringFormat='{}{0:0.0}°'}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Levels -->
                            <Border Style="{StaticResource SectionBorder}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Brightness Levels" Style="{StaticResource GroupHeaderStyle}" Margin="0" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="Reset" Padding="5,2" FontSize="10" FontFamily="Arial"
                                            Background="#FDEDEC" BorderBrush="#E59866"
                                            Click="BtnEditorResetLevels_Click"/>
                                    </Grid>
                                    <TextBlock FontSize="9" FontFamily="Arial" Foreground="#999" Margin="0,0,0,6" TextWrapping="Wrap">
                                    Min = black point  |  Max = white point
                                    </TextBlock>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="38"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Min" Style="{StaticResource EdLabel}"/>
                                        <Slider x:Name="EdSliderLvMin" Grid.Column="1" Minimum="0" Maximum="254" Value="0"
                                            TickFrequency="1" IsSnapToTickEnabled="True"
                                            ValueChanged="EdSliderLvMin_Changed"/>
                                        <TextBlock Grid.Column="2" Style="{StaticResource EdValue}"
                                               Text="{Binding Value, ElementName=EdSliderLvMin, StringFormat='{}{0:0}'}"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="38"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Max" Style="{StaticResource EdLabel}"/>
                                        <Slider x:Name="EdSliderLvMax" Grid.Column="1" Minimum="1" Maximum="255" Value="255"
                                            TickFrequency="1" IsSnapToTickEnabled="True"
                                            ValueChanged="EdSliderLvMax_Changed"/>
                                        <TextBlock Grid.Column="2" Style="{StaticResource EdValue}"
                                               Text="{Binding Value, ElementName=EdSliderLvMax, StringFormat='{}{0:0}'}"/>
                                    </Grid>
                                    <!-- Grayscale -->
                                    <CheckBox x:Name="ChkGrayscale"
                                          Content="Convert to Grayscale"
                                          FontSize="11" FontFamily="Arial" Margin="0,8,0,0"
                                          Checked="ChkGrayscale_Changed"
                                          Unchecked="ChkGrayscale_Changed"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer: name + Add to Blots + Reset All -->
                    <Border Grid.Row="4" Padding="10,10" BorderBrush="#AED6F1"
                        BorderThickness="0,2,0,0" Background="#EBF5FB">
                        <StackPanel>
                            <TextBlock Text="Antibody name:" FontSize="11" FontFamily="Arial"
                                   Foreground="#1A5276" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#x3B1;-" FontSize="15" FontFamily="Arial" FontWeight="Bold"
                                       Foreground="#1A5276" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBox x:Name="TxtEditorName" Grid.Column="1"
                                     FontSize="13" FontFamily="Arial" Padding="4,3" Text="Protein"/>
                            </Grid>
                            <Button x:Name="BtnEditorAddToBlots"
                                Content="&#x2795;  Add to Blot Images"
                                Padding="10,9" FontSize="13" FontFamily="Arial" FontWeight="Bold"
                                Background="#27AE60" Foreground="White" BorderBrush="#1E8449"
                                Cursor="Hand" Click="BtnEditorAddToBlots_Click"
                                IsEnabled="False"/>
                            <Button Content="Reset All"
                                Padding="8,5" FontSize="11" FontFamily="Arial"
                                Background="#FDEDEC" BorderBrush="#E59866" Margin="0,5,0,0"
                                Click="BtnEditorResetAll_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>